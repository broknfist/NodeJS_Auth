<!DOCTYPE html>
<html lang="hu">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
  <%- include('header') -%>

  <div class="container my-5">
    <h1 class="mb-4">CRUD - Termékek kezelése</h1>

    <% if (typeof query !== 'undefined' && query.success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= query.success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <% if (typeof query !== 'undefined' && query.error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= query.error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

    <div class="card mb-4 shadow">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0"><%= editing ? 'Termék szerkesztése' : 'Új termék hozzáadása' %></h3>
      </div>
      <div class="card-body">
        <form method="POST" action="<%= editing ? '/crud/update/' + editing.id : '/crud/create' %>">
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="name" class="form-label">Név <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="name" name="name" 
                     value="<%= editing ? editing.name : '' %>" required>
            </div>
            <div class="col-md-6 mb-3">
              <label for="price" class="form-label">Ár (Ft) <span class="text-danger">*</span></label>
              <input type="number" step="0.01" class="form-control" id="price" name="price" 
                     value="<%= editing ? editing.price : '' %>" required>
            </div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Leírás</label>
            <textarea class="form-control" id="description" name="description" rows="3"><%= editing ? editing.description : '' %></textarea>
          </div>
          <div class="mb-3">
            <label for="stock" class="form-label">Készlet</label>
            <input type="number" class="form-control" id="stock" name="stock" 
                   value="<%= editing ? editing.stock : '0' %>" min="0">
          </div>
          <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
              <%= editing ? 'Frissítés' : 'Hozzáadás' %>
            </button>
            <% if (editing) { %>
            <a href="/crud" class="btn btn-secondary">Mégse</a>
            <% } %>
          </div>
        </form>
      </div>
    </div>

    <div class="card shadow">
      <div class="card-header bg-success text-white">
        <h3 class="mb-0">Termékek listája</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Név</th>
                <th>Leírás</th>
                <th>Ár</th>
                <th>Készlet</th>
                <th>Létrehozva</th>
                <th>Műveletek</th>
              </tr>
            </thead>
            <tbody>
              <% if (products && products.length > 0) { %>
              <% products.forEach(product => { %>
              <tr>
                <td><%= product.id %></td>
                <td><%= product.name %></td>
                <td><%= product.description || '-' %></td>
                <td><%= product.price.toLocaleString('hu-HU') %> Ft</td>
                <td><%= product.stock %></td>
                <td><%= new Date(product.created_at).toLocaleString('hu-HU') %></td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a href="/crud/edit/<%= product.id %>" class="btn btn-warning">Szerkesztés</a>
                    <form method="POST" action="/crud/delete/<%= product.id %>" style="display: inline;" 
                          onsubmit="return confirm('Biztosan törölni szeretné ezt a terméket?');">
                      <button type="submit" class="btn btn-danger">Törlés</button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }); %>
              <% } else { %>
              <tr>
                <td colspan="7" class="text-center">Nincs termék</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>
</body>

</html>

